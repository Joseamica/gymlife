block page
	include ../sections/_header-creative
	include ../sections/_swiper-slider-3

	//About us
	section.section.section-xl.bg-default
		.container: .row.row-30.row-md-50.align-items-center
			.col-lg-4.col-xl-5.wow.fadeInUp: .inset-xl-right-70
				.title-10 A few words about us
				.divider
				h3.text-transform-none #1 Fitness Club
				p.big GoSport is the fitness club that makes fitness totally accessible to everybody. We promise to help people from all walks of life achieve their individual health and fitness goals.
			.col-sm-11.col-md-9.col-lg-8.col-xl-7: .group-custom-3
				+img('image-7-523x367.png').wow.fadeIn
				form.rd-form.form-style-5.bg-gray-100.rd-mailform.wow.fadeInRight( data-form-output='form-output-global', data-form-type='contact', method='post', action='bat/rd-mailform.php' )
					.form-wrap
						input#contact-name.form-input( type='text', name='name', data-constraints='@Required' )
						label.form-label( for='contact-name' )
							span.icon.mdi.mdi-account-outline
							span Your Name
					.form-wrap
						input#contact-phone.form-input( type='text', name='phone', data-constraints='@Numeric' )
						label.form-label( for='contact-phone' )
							span.icon.mdi.mdi-phone
							span Phone
					.group-lg.group-custom-4.align-items-center
						button.button.button-gray-800( type='submit' ) Book a workout
						.text-1 First lesson is free

