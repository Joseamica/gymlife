//- Thumbnails

mixin thumbnail( obj )
	// Thumbnail
	article.thumbnail&attributes( attributes )
		a.thumbnail-figure( data-lightgallery='item' href='images/' + obj.imgOriginal + '.jpg' )
			+img( obj.img )
			.thumbnail-overlay
				if obj.text
					.thumbnail-text= obj.text
				else
					span.icon.mdi.mdi-magnify

mixin thumbnail-classic( obj )
	// Thumbnail classic
	article.thumbnail-classic&attributes( attributes )
		a.thumbnail-classic-figure( data-lightgallery='item' href='images/' + obj.imgOriginal + '.jpg' )
			+img( obj.img )
			.thumbnail-classic-overlay: span.icon.mdi.mdi-plus

mixin thumbnail-modern( obj )
	// Thumbnail modern
	article.thumbnail-modern&attributes( attributes )
		a.thumbnail-modern-figure( data-lightgallery='item' href='images/' + obj.imgOriginal + '.jpg' )
			+img( obj.img ).img-duotone( data-gradient-map="#242659, #ade5e4" )
			.thumbnail-modern-overlay: span.icon.mdi.mdi-plus

