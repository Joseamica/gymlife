//- Schedule
mixin schedule( obj )
	// Schedule
	article.schedule&attributes( attributes )
		.schedule-body.group-lg
			.heading-4.schedule-days= obj.days
			div
				ul.schedule-info
					li.schedule-info-item
						span.icon.mdi.mdi-clock
						span.big= obj.time
					li.schedule-info-item
						span.icon.mdi.mdi-account-outline
						span.big= obj.name
			a.button.button-default-outline-3( href='contact-us.html' ) Join now

//- Bootstrap Card
	@param {object}  obj           - card object
	@param {boolean} obj.show      - is card not collapsed
	@param {string}  obj.parentId  - parent accordion id
	@param {string}  obj.title     - card title
mixin card-schedule( obj )
	-
		var
		headId = obj.parentId +'-card-head-'+ randomStr(8),
		bodyId = obj.parentId +'-card-body-'+ randomStr(8);

	//Bootstrap card
	article.card.card-custom.card-style-1&attributes( attributes )
		.card-header( role='tab' )
			.card-title.schedule.schedule-2
				.schedule-body.group-lg
					.heading-4.schedule-days= obj.days
					div
						ul.schedule-info
							li.schedule-info-item
								span.icon.mdi.mdi-clock
								span.big= obj.time
							if obj.name
								li.schedule-info-item
									span.icon.mdi.mdi-account-outline
									span.big= obj.name
					.schedule-button-wrap
						a.button.button-default-outline-3( href='contact-us.html' ) Join now
						a.schedule-button( id= headId, data-toggle='collapse', data-parent='#' + obj.parentId, href='#' + bodyId, aria-controls= bodyId, aria-expanded= Boolean(obj.show).toString(), class={collapsed: !obj.show}, role='button', )

		.collapse( id= bodyId, aria-labelledby= headId, data-parent='#' + obj.parentId, class={show: obj.show}, role='tabpanel' )
			.card-body
				block