//- Posts
mixin post( obj )
	//post
	article.post&attributes( attributes )
		+img( obj.img ).post-image
		.post-content
			div
				a.post-tag( href='#' class= obj.tag.class )= obj.tag.text
				.heading-5.post-title: a( href= links.blogPost )!= obj.title
			.post-time
				time( datetime= obj.time.date )= obj.time.text
		.post-dummy

mixin post-1( obj )
	//post
	article.post&attributes( attributes )
		+img( obj.img ).post-image
		.post-content
			div
				a.post-tag( href='#' class= obj.tag.class )= obj.tag.text
			div
				if block
					block
				.heading-2.post-title: a( href= links.blogPost )!= obj.title
				.heading-5.post-text= obj.text
				.post-time
					time( datetime= obj.time.date )= obj.time.text
		.post-dummy

mixin post-modern( obj )
	//post modern
	article.post-modern&attributes( attributes )
		.post-modern-body( class= obj.mod )
			.post-modern-content
				div
					a.post-tag( href='#' class= obj.tag.class )= obj.tag.text
					.heading-6.post-modern-title: a( href= links.blogPost )= obj.title
					.post-modern-text= obj.text
				.post-time
					time( datetime= obj.time.date )= obj.time.text
			.post-modern-figure: +img( obj.img )
		.post-dummy

