mixin post-minimal( obj )
	//post minimal
	article.post-minimal&attributes( attributes )
		.unit( class= obj.unit )
			.unit-left: a.post-minimal-figure( href= links.blogPost ): +img( obj.img )
			.unit-body
				.post-minimal-title: a( href= links.blogPost )= obj.title
				.post-minimal-time
					time( datetime= obj.time.date )= obj.time.text

