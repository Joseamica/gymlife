mixin box-leah( obj )
	// Box leah
	article.box-leah&attributes( attributes )
		+img( obj.img )
		.box-leah-body
			.heading-5.box-leah-title: a( href='#' )= obj.title
			.big.box-leah-square= obj.square
			.box-leah-text!= obj.text