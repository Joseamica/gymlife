//- Boxes

mixin box-minimal( obj )
	// Box minimal
	article.box-minimal&attributes( attributes )
		.unit.align-items-center
			.unit-left: .box-minimal-icon( class= obj.icon )
			.unit-body: .heading-4.box-minimal-title= obj.title
		.heading-5.box-minimal-number.ordered-item

mixin box-classic( obj )
	// Box classic
	article.box-classic&attributes( attributes )
		.box-classic-icon( class= obj.icon )
		.heading-3.box-classic-title= obj.title
		.big.box-classic-text= obj.text

